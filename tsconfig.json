{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.tsx", "index.ts"],
  "exclude": ["node_modules"]
}

